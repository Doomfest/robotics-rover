#!/usr/bin/env python2.7


import roboticsnet
from roboticsnet.rover_listener import RoverListener
from roboticsnet.command_hook import CommandHook

import roboticsrov
from roboticsrov.ucontroller_manager import UControllerManager 

ucontrManager = UControllerManager()

cmdHook = CommandHook(
    forward=ucontrManager.forward,
    reverse=ucontrManager.reverse,
    turn=ucontrManager.turn)

server = RoverListener(hooks=cmdHook)

print roboticsrov.__appname__, " ", roboticsrov.__version__
print "Starting command dispatcher..."
server.listen()

